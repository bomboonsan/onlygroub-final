import { Image } from 'astro:assets';
const { title , excerpt , date, dateFormatted, imageUrl, imageAlt, url , sizes , srcset  } = Astro.props;
---
<article class="post">
    <div class="post-thumbnail">
        <a href={`/${url}`}>
        <Image
            srcset={srcset}
            sizes={sizes}
            src={imageUrl}
            alt={imageAlt}
            width="300"
            height="429"
            loading="lazy"
        />
        </a>
    </div>

    <div class="post-content">
        <h3 class="post-title"><a href={`/${url}`}>{title}</a></h3>
        <time datetime={date} class="entry-date">{dateFormatted}</time>
        <div class="entry-excerpt" set:html={excerpt}></div>
    </div>
</article>